name: Availability Check for prod

on:
  schedule:
    - cron: '35 4 * * *'


jobs:
  health-check:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout Repository
        uses: actions/checkout@v2

      - name: Set up Node.js
        uses: actions/setup-node@v2
        with:
          node-version: '14'

      - name: Install Dependencies
        run: npm install

      - name: Run Health Check
        run: |
          if curl -IsSf ${{ secrets.URL_PROD }} -o /dev/null; then
            echo "Website Health Check Passed"
          else
            echo "Website Health Check Failed"
            exit 1
          fi
          
        env:
          website_url: ${{ secrets.URL_PROD }}

      - name: Notify on Failure
        if: failure()
        run: echo "Health Check failed for Prod"
